<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans    
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="loginAction" class="com.grayson.action.LoginAction"
		scope="prototype">
		<property name="serviceFactory" ref="serviceFactory" />
	</bean>
	
	<bean id="serviceFactory" class="com.grayson.service.factory.ServiceFactory"
		scope="prototype">
		<property name="userService" ref="userService" />
	</bean>
	<bean id="userService" class="com.grayson.service.impl.UserServiceImpl"
		scope="prototype">
		<property name="baseDAO" ref="baseDAO" />
	</bean>
	<bean id="baseDAO" class="com.grayson.dao.BaseDAOImpl"
		scope="prototype">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
</beans>